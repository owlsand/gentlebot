# Discord configuration
DISCORD_TOKEN=your-token-here
DISCORD_APPLICATION_ID=your-app-id
DISCORD_GUILD_ID=your-guild-id

# API keys
ALPHA_VANTAGE_KEY=your-alpha-vantage
HF_API_TOKEN=your-hf-token
HF_API_TOKEN_ALT=optional-secondary-token
HF_MODEL=optional-model

# Channel overrides
MONEY_TALK_CHANNEL=channel-id

# Optional Postgres credentials for logging
PG_HOST=db
PG_PORT=5432
PG_USER=gentlebot
PG_PASSWORD=your-db-password
PG_DB=gentlebot
# or provide an explicit connection URL
PG_DSN=postgresql+asyncpg://gentlebot:your-db-password@db:5432/gentlebot
# enable pruning of old Docker images when the container starts
DOCKER_PRUNE=1
# skip Postgres wait-loop and migrations (useful for CI)
SKIP_DB=0
